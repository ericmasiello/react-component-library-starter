{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "ESNEXT",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/**/*", "src/**/*.story.tsx", "src/storybook/", "node_modules"]
}
